<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adamson.miles.climbingtrainer.BuildNewProgramEndDate">


    <!-- view for AdMob Banner Ad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePickerEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:headerBackground="@android:color/holo_purple" />

        <LinearLayout style="@style/LayoutHorizontalTransparent">

            <Button
                android:id="@+id/buttonToReview"
                style="@style/ButtonWhite"
                android:textColor="#000000"
                android:background="@drawable/gradient_pink"
                android:gravity="center"
                android:text="@string/accept_end_date" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
